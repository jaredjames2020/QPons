<div class="current-offers">
  <h2> All current offers </h2>


  <h3> <%= link_to "View offers by route or category", travels_path %> </h3>

  <% @offers.each.with_index(1) do |comp, index| %>
  <h3><%=index%></h3>
  <h3><%="Company: #{comp.name}" %></h3>
  <h3><%="Category: #{comp.category}" %></h3>
  <h3><%="Location: #{comp.location}" %></h3>

    <% comp.offers.each do |offer| %>
      <p><%="Description: #{offer.description}" %></p>
  <% end %>

  <% end %>
  </div>
