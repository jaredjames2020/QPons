<h2>Create a new user account </h2>

<%= form_for @user do |f| %>
  <%= f.label :Username %>
  <div><%= f.text_field :username %></div>
  <%= f.label :Password %>
  <div><%= f.password_field :password %></div>
  <%= f.label :Password_Confirmation %>
  <div><%= f.password_field :password_confirmation %></div>
  <%= f.submit %>
<% end %>
