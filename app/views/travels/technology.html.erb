<h2> List of technology companies with offers </h2>
<h3><%= link_to 'View all current offers', travels_path %></h3>

<%@technology.each.with_index(1) do |comp_technology, index|%>
  <p><%=index%>
  <p>Name: <%=comp_technology.name%></p>
  <p>Location: <%=comp_technology.location%></p>

  <p><%comp_technology.offers.each do |offer|%></p>
  <p>Offer: <%=offer.description%></p>
  <% end %>
<% end %>
