<h2> List of companies with auto offers </h2>
<h3><%= link_to 'View all current offers', travels_path %></h3>
<%=params[:id]%>

<%@auto.each.with_index(1) do |comp_auto, index|%>
<p><%=index%>
<p>Name: <%=comp_auto.name%></p>
<p>Location: <%=comp_auto.location%></p>

<p><%comp_auto.offers.each do |offer|%></p>
<p>Offer: <%=offer.description%></p>
<% end %>
<% end %>
