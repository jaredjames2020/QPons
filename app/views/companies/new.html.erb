<div class="new-company">
<h2> Enter a new company and offer </h2>

<div class="field_with_errors">
  <%= render partial: '/errors', locals: { record: @company } %>
</div>


<%= form_for @company do |s| %>
  <div class="form-group">
    <p><%= s.label :Company_name %>
    <%= s.text_field :name %></p>
    <p><%= s.label :location %>
    <%= s.text_field :location %></p>
    <p><%= s.label :category %>
    <%= s.text_field :category %></p>
  <!--#s.collection_select :companies, :category, @all_companies, :id, :category //-->
  </div><br>

  <%= s.fields_for :offers, Offer.new do |e| %>
  <div class="form-group">
    <p><%= e.label :route %>
    <%= e.collection_select :travel_id, Travel.all, :id, :name %></p>
    <p><%= e.label :offer_description %>
    <%= e.text_field :description%></p>
    </div><br>
<% end %>
<div class="submit-button"><%= s.submit %></div>
<% end %>
</div>
