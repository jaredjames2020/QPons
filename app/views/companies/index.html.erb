<%@companies.each.with_index(1) do |comp, index|%>
  <p><%=index%>
  <p>Name: <%=comp.name%></p>
  <p>Location: <%=comp.location%></p>

  <p><%comp.offers.each do |offer|%></p>
    <p>Offer: <%=offer.description%></p>
     <% end %>
<% end %>

